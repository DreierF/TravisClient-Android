<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/build_number"
                style="@style/ViewBuildText.TwoLines.Title.NoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/build_state"
                style="@style/ViewBuildText.TwoLines.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/ViewBuildImageIcon.Big"
                android:src="@drawable/person"
                />

            <TextView
                android:id="@+id/build_commit_person"
                style="@style/ViewBuildText.OneLine.Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/build_pull_request_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/ViewBuildImageIcon.TopAligned"
                android:src="@drawable/pull_request"
                />

            <TextView
                android:id="@+id/build_pull_request_title"
                style="@style/ViewBuildText.ThreeLines.Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/build_branch_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/ViewBuildImageIcon"
                android:src="@drawable/git_branch"
                />

            <TextView
                android:id="@+id/build_branch"
                style="@style/ViewBuildText.OneLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/build_build_commit_msg_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/ViewBuildImageIcon.TopAligned"
                android:src="@drawable/git"
                />

            <TextView
                android:id="@+id/build_commit_message"
                style="@style/ViewBuildText.TwoLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/ViewBuildImageIcon"
                android:src="@drawable/duration"
                />

            <TextView
                android:id="@+id/build_duration"
                style="@style/ViewBuildText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/ViewBuildImageIcon"
                android:src="@drawable/finished_at"
                />

            <TextView
                android:id="@+id/build_finished"
                style="@style/ViewBuildText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</merge>
