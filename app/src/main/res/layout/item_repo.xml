<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@null"
                android:drawablePadding="2dp"
                android:maxLines="2"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/item_repo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/duration"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/duration"
                android:paddingTop="2dp"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/item_repo_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/finished_at"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/finished_at"
                android:paddingTop="2dp"
                android:textSize="19sp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>